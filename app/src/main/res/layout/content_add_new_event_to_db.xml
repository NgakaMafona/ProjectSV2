<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_new_event_to_db"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="za.co.devj.projectsv2.AddNewEventToDBActivity"
    tools:showIn="@layout/activity_add_new_event_to_db">

    <Spinner
        android:id="@+id/new_event_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_c_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_event_type">

        <EditText
            android:id="@+id/edt_c_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Company name"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_c_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_c_name">

        <EditText
            android:id="@+id/edt_c_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:hint="company desc"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_c_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_c_desc">

        <EditText
            android:id="@+id/edt_c_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPhonetic"
            android:hint="Phone Number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_c_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_c_tel">

        <EditText
            android:id="@+id/edt_c_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textWebEditText"
            android:hint="Website"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_c_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_c_web">

        <EditText
            android:id="@+id/edt_c_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:hint="Address"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
